@using HairSalon.Models;

<h1>Hair Salon</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no clients!</p>
}

@if (Model.Count != 0)
{
  @foreach (Client client in Model)
  {
      <li><a href="/client/@client.GetId()">@client.GetName()</a></li>
  }
}

</ul>
<a href="/client/new">Add a new client.</a>

<form action="/client/delete" method="post">
    <button type="submit" name="button">Clear All Clients</button>
</form>
